<div class="title-wrapper pt-30">
  <div class="row align-items-center">
    <div class="col-md-6">
      <div class="title mb-30">
        <h1>Placements for
          <%= @casa_case.case_number %>
        </h1>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-12">
  <div class="card-style mb-30">
    <table class="table">
      <thead>
      <tr>
        <th>Placement Type</th>
        <th>Start Date</th>
        <th></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @placements.each_with_index do |placement, idx| %>
        <tr>
          <td><%= placement.placement_type.name %></td>
          <td>
            <%= placement.placement_started_at.strftime('%B %d, %Y') %>
            <%= "- Present" if idx.zero? %>
          </td>
          <td><%= link_to "Edit", edit_casa_case_placement_path(@casa_case, placement), class: 'text-danger' %></td>
          <td>
            <%= link_to [@casa_case, @placement], method: :delete, data: { confirm: 'Are you sure?' },class: "btn-sm main-btn danger-btn-outline btn-hover ms-auto" do %>
              <i class="lni lni-trash-can mr-10"></i>
              Delete
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>